{
  "root": true,
  "extends": "standard-with-typescript",
  "ignorePatterns": [
    "**/*.js",
    "**/*.d.ts"
  ],
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "plugins": [
    "react-hooks"
  ],
  "rules": {
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "error"
  }
}