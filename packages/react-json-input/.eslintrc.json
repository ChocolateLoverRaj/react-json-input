{
  "root": true,
  "extends": [
    "standard-with-typescript",
    "plugin:import/typescript"
  ],
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "plugins": [
    "react-hooks",
    "import"
  ],
  "ignorePatterns": [
    "lib/scss.d.ts",
    "dist",
    "**/*.snap"
  ],
  "rules": {
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "error",
    "import/no-unused-modules": [
      2,
      {
        "missingExports": true,
        "unusedExports": true,
        "ignoreExports": [
          "lib/JsonInput.tsx",
          "lib/valueFromSchema.ts",
          "**/*.test.tsx",
          "preprocess.cjs",
          "babel.config.cjs",
          "generateScopedName.cjs"
        ]
      }
    ]
  }
}